<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:padding="10dip"
  android:layout_margin="5dip"
  android:background="@drawable/dialog_bg"
  android:orientation="horizontal">
      <ImageView   
               android:id="@+id/dialog_textview_icon" 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginRight="10px"
               android:layout_gravity="center_vertical"
               android:background="@drawable/info"/>
      <ImageView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginRight="10dip"
               android:layout_gravity="center_vertical"
               android:background="@drawable/widget_line"/>
               
       <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               
               <TextView
               android:id="@+id/dialog_textview_title" 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="22sp"
               android:textStyle="bold"
               android:textColor="@color/text_color"
               android:textAppearance="?android:attr/textAppearanceMedium"/>
               
               <TextView
               android:id="@+id/dialog_textview_content" 
               android:gravity="center"
               android:layout_width="wrap_content"
               android:layout_height="90dip"
               android:textColor="@color/text_color"
               android:textSize="20sp"
               android:paddingTop="10dip"
               android:paddingBottom="10dip"/>  
                 
               <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_gravity="center_horizontal">
               
                 <Button
               android:id="@+id/dialog_textview_button1" 
               android:layout_width="70dip"
               android:layout_height="wrap_content"
               android:background="@drawable/list_bg_selector"
               android:textColor="@color/text_color"
               android:textSize="16sp"/>
               
                 <Button
               android:id="@+id/dialog_textview_button2" 
               android:layout_width="70dip"
               android:layout_height="wrap_content"
               android:background="@drawable/list_bg_selector"
               android:textColor="@color/text_color"
               android:textSize="16sp"/>  
               
                </LinearLayout> 
                
        </LinearLayout>
 
</LinearLayout>